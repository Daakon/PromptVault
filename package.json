{
  "name": "prompt-vault",
  "version": "1.0.0",
  "private": true,
  "description": "PromptVault multi-target workspace",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace @prompt-vault/web",
    "build:web": "npm run build --workspace @prompt-vault/web",
    "dev:extension": "npm run dev --workspace @prompt-vault/chrome-extension",
    "build:extension": "npm run build --workspace @prompt-vault/chrome-extension",
    "dev:desktop": "npm run dev --workspace @prompt-vault/desktop",
    "build:desktop": "npm run build --workspace @prompt-vault/desktop",
    "package:desktop": "npm run build:web && npm run build:desktop && npm run package --workspace @prompt-vault/desktop",
    "lint": "echo \"add linting\""
  }
}
